@model IEnumerable<MVC_Demo.Models.Product>

<h2>
    Product List
</h2>

<table width="400" border="1">
    <th>Product Id</th>
    <th>Name</th>
    <th>Price</th>
    <th>View Details</th>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@Html.ActionLink("Products Details" ,"Details" , new {  id = item.ProductId} )</td>
        </tr>
    }
</table>